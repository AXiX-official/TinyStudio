<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TinyStudio.ViewModels"
             xmlns:models="clr-namespace:TinyStudio.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TinyStudio.Views.Workspace"
             x:DataType="vm:MainWindowViewModel">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="5" ColumnDefinitions="*,Auto,Auto">
            <TextBox Watermark="Search... (Press Enter to apply)" Grid.Column="0"
                     Text="{Binding SearchText, Mode=OneWay}"
                     KeyDown="SearchTextBox_KeyDown"
                     Margin="0,0,5,0"/>
            <CheckBox Grid.Column="1" Content="Regex" 
                      IsChecked="{Binding UseRegexWorkspace, Mode=TwoWay}" 
                      VerticalAlignment="Center" Margin="0,0,5,0" ToolTip.Tip="Use Regular Expression for search"/>
            <Button Grid.Column="2" Content="Filter Types" Margin="0,0,5,0" MinWidth="120">
                <Button.Flyout>
                    <Flyout Placement="BottomEdgeAlignedLeft">
                        <ListBox ItemsSource="{Binding AssetTypesWorkspace}" MaxHeight="400">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:SelectableType">
                                    <CheckBox Content="{Binding TypeName}" 
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <DataGrid ItemsSource="{Binding FilteredAssetsWorkspace}"
                  SelectedItem="{Binding SelectedAssetWorkspace}"
                  Margin="5"
                  RowHeight="14"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  CanUserResizeColumns="True">
            <DataGrid.Styles>
                <Style Selector="DataGridCell">
                    <Setter Property="Padding" Value="2,2"/>
                </Style>
                <Style Selector="DataGridRow">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Remove From Workspace" 
                                          Command="{Binding $parent[UserControl].DataContext.RemoveFromWorkspaceCommand}"
                                          CommandParameter="{Binding}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Name" Width="200" MinWidth="100" SortMemberPath="Name">
                    <DataTemplate x:DataType="models:AssetWrapper">
                        <TextBlock Text="{Binding Name}" FontSize="12" VerticalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Container" Width="200" MinWidth="100" SortMemberPath="Container">
                    <DataTemplate x:DataType="models:AssetWrapper">
                        <TextBlock Text="{Binding Container}" FontSize="12" VerticalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Type" Width="120" MinWidth="60" SortMemberPath="Type">
                    <DataTemplate x:DataType="models:AssetWrapper">
                        <TextBlock Text="{Binding Type}" FontSize="12" VerticalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="PathID" Width="120" MinWidth="50" SortMemberPath="PathId">
                    <DataTemplate x:DataType="models:AssetWrapper">
                        <TextBlock Text="{Binding PathId}" FontSize="12" VerticalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Size" Width="100" MinWidth="50" SortMemberPath="Size">
                    <DataTemplate x:DataType="models:AssetWrapper">
                        <TextBlock Text="{Binding Size}" FontSize="12" VerticalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
